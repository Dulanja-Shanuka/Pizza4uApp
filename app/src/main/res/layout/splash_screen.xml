<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="#9C27B0"
   >

    <TextView
        android:id="@+id/textViewPizza4u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"

        android:text="Pizza 4u"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/teal_200"
        android:textSize="60dp"
        android:textStyle="bold"
        app:drawableTint="#000000"
        app:fontFamily="@font/berkshire_swash"
        app:textAllCaps="false" />





    <ImageView
        android:id="@+id/ImageIconView"
        android:layout_centerHorizontal="true"
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:layout_below="@id/textViewPizza4u"
        android:src="@drawable/pizza"
        android:layout_marginTop="70dp"

        />







    <Button
        android:id="@+id/buttonStarted"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ImageIconView"
        android:layout_centerHorizontal="true"
        android:text="Get Started"
        app:backgroundTint="@color/black"
        android:textSize="18dp"

        android:layout_marginTop="70dp"
        />






</RelativeLayout>